<launch>
    <!-- 定义一个参数，允许从命令行接收rosbag路径 -->
    <arg name="rosbag_path" default="/root/catkin_ws/src/offboard_pkg/bag/demo_experience_2025-01-07-10-47-06.bag"/>
    <arg name="rosbag_topic" default="/drone_1/mavros/setpoint_raw/local"/>
    <arg name="topic_start_seq" default="321"/>
    <arg name="topic_end_seq" default="1049"/>
    <!-- 启动offboard_waypoint_tracker节点 -->
    <node pkg="offboard_pkg" type="offboard_setpoint_raw_tracker" name="offboard_setpoint_raw_tracker_node" output="screen" >
        <!-- 使用传入的参数设置rosbag路径参数 -->
        <param name="rosbag_path" value="$(arg rosbag_path)" />
        <param name="rosbag_topic" value="$(arg rosbag_topic)" />
        <param name="topic_start_seq" value="$(arg topic_start_seq)" />
        <param name="topic_end_seq" value="$(arg topic_end_seq)"/>
    </node>
</launch>